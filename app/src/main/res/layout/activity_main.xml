<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/titol_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginTop="60dp"
        android:text="@string/titol_app"
        android:textColor="#FFFFFF"
        android:textSize="100sp"
        android:textStyle="italic"
    />

    <Button
        android:id="@+id/boto_arxiu"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="215dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/imatge_arxiu"
        android:onClick="swapfile"
    />

    <Button
        android:id="@+id/boto_camera"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/imatge_camera"
        android:onClick="swapcamera"
    />

</RelativeLayout>
